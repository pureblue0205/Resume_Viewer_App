<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a16sapi.aidle.minyuresume.MainActivity">


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="@string/stringName"
        android:textSize="48sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/name"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/face"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:layout_below="@+id/linkedinlayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:contentDescription="face"
                android:src="@drawable/min_face_round" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal">


                <ImageView
                    android:id="@+id/imagePhone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="70dp"
                    android:contentDescription="linkedin"
                    android:src="@mipmap/ic_phone" />

                <ImageView
                    android:id="@+id/imageEmail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imagePhone2"
                    android:contentDescription="linkedin"
                    android:src="@mipmap/ic_email" />


                <ImageView
                    android:id="@+id/imagelinkedin2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_toRightOf="@+id/imageEmail2"
                    android:contentDescription="linkedin"
                    android:src="@mipmap/ic_linkedin" />
            </RelativeLayout>
            <!--Above: option 1 (preferred)-->

            <LinearLayout
            android:id="@+id/phonelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryLight"
            android:gravity="center_horizontal">


            <ImageView
            android:id="@+id/imagePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="phone"
            android:src="@mipmap/ic_phone" />

            <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/stringPhone"
            android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
            android:id="@+id/emaillayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phonelayout"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryLight"
            android:gravity="center_horizontal">

            <ImageView
            android:id="@+id/imageEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="email"
            android:src="@mipmap/ic_email" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:autoLink="email"
            android:gravity="center"
            android:text="iam.minhhh@gmail.com"
            android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
            android:id="@+id/linkedinlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emaillayout"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryLight"
            android:gravity="center_horizontal"

            >

            <ImageView
            android:id="@+id/imagelinkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="linkedin"
            android:src="@mipmap/ic_linkedin" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:autoLink="web"
            android:gravity="center"
            android:text="linkedin.com/in/min-yu"
            android:textSize="20dp" />
            </LinearLayout>
            <!--Above: option 2-->


            <TextView
                android:id="@+id/highlightTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/face"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="@string/highlights"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="@string/stringHighlightsList"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
